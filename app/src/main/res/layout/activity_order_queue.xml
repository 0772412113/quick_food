<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recycler.OrderQueue">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Order_queue"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/order_history"
        android:layout_width="207dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/button_select_tint"
        android:background="@drawable/order_queue_buttons"
        android:text="Order History"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ongoing_orders"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/ongoing_orders"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/button_select_tint"
        android:background="@drawable/order_queue_buttons"
        android:text="Ongoing Orders"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>