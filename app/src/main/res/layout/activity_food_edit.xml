<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".foodEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="2dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Food Id"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText

            android:background="@drawable/button_edit_text"
            android:id="@+id/food_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="Food ID"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Food Type"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:background="@drawable/button_edit_text"
            android:id="@+id/food_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:hint="Food Type"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Food Price"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:background="@drawable/button_edit_text"
            android:id="@+id/food_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:hint="Food ID"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add Food Sizes ,"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sizeSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/addAvailableSizes"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_more_button"
        android:text="Add Sizes"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_add"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add Food Adders ,"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/adderSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/addAvailableAdders"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_more_button"
        android:text="Add Adders"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_add"
        />


</LinearLayout>