<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quick_food">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Quick Foods"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ItemList"></activity>
        <activity android:name=".OrderQueue" />
        <activity android:name=".UserProfile" />
        <activity android:name=".QRCodeScanner" />
        <activity android:name=".PaymentDetails" />
        <activity
            android:name=".PaypalPayment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".recycler.Foods" />
        <activity
            android:name=".anime.selectAnim"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".recycler.PlacesToBuy"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".recycler.Cart"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".recycler.CartView"
            android:parentActivityName=".recycler.Foods" />
        <activity
            android:name=".SignUp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".recycler.FoodCategory"
            android:parentActivityName=".recycler.PlacesToBuy" />
        <activity
            android:name=".anime.welcome"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>